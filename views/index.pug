      .modal__background
        #settingsModal.modal
          .modal__title 
            h1.header Settings
          .modal__section 
            .modal__sectionTitle
              p HTML download file
            label web page filename
            br
            input#web-page-filename(type="text")
            br
            label web page title
            br
            input#web-page-title(type="text")
          .modal__centerwrap
            button.save Save
            button.cancel Cancel
        
        #okModal.modal
          .modal__title
            h1.header Title
          .modal__content
          .modal__centerwrap
            button.button--block Ok
        
